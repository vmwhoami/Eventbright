<h1 class= "text-center">Login</h1>
 <div class="row">
  <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= form_with(url: login_path, scope: :session,local: true,class: "form-signin") do |f|%>
      <%= f.label :name, "Name",class:"sr-only" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit "Login",class:"btn btn-lg btn-primary btn-block rounded-0"  %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
 </div>