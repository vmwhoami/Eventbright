<h1 class="text-center">Past events</h1>
<div class="row">

  <%@past.each do |event| %>
  <div class="card col-md-4 mb-4 box-shadow">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal"><%= event.name %></h4>
    </div>
    <div class="card-body">
      <h1 class="card-title pricing-card-title"></h1>
      <ul class="list-unstyled mt-3 mb-4">
        <li><%= event.creator.name %></li>
        <li><%= event.location %></li>
      </ul>
      <%= link_to "#{event.name}", event_path(event) %>

    </div>
  </div>
  <% end %>

</div>
<h1 class="text-center">Upcoming events</h1>
<div class="card-deck mb-3 text-center">
  <%@future.each do |event| %>
  <div class="card mb-4 box-shadow">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal"><%= event.name %></h4>
    </div>
    <div class="card-body">
      <h1 class="card-title pricing-card-title"></h1>
      <ul class="list-unstyled mt-3 mb-4">
        <li>Event creator: <%= event.creator.name %></li>
        <li><%= event.location %></li>

      </ul>
      <%= link_to  "See event", event_path(event) %>
    </div>
  </div>
  <% end %>
</div>